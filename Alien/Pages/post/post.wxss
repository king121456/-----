page{
    background-color: gray;
}
swiper{
    width:100%;
    height:500rpx;
}

swiper image{
    width:100%;
    height:500rpx;
}

.post-container{
    display: flex;
    flex-direction: column;
    margin:20rpx 0 40rpx 0;
    background-color: #fff;
    border-top:1px solid #ededed;
    border-bottom:1px solid #ededed;
    padding-bottom:5px;
}

.post-date-user{
    margin:10rpx 0 20rpx 10rpx;
}

.post-user{
    width:60rpx;
    height:60rpx;
    margin-left:16rpx;
    vertical-align: middle;
}

.post-date{
    font-size:30rpx;
    font-weight: 400;
}

.post-title{
    font-size:500;
    font-weight: bolder;
    margin-bottom:20rpx;
    margin-left:16rpx;
}

.post-content-image{
   width:100%;
    height:340rpx;
    margin:auto 0;
    margin-bottom: 15px;
}

.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}
.post-panel{
    font-size:13px;
    line-height: 16px;
    height:16px;
    margin-left: 10px;
}
.post-panel image{
   height:16px;
    width:16px;
    margin-right: 4px;
    vertical-align:middle;
}

.post-panel-font{
    vertical-align:middle;
    margin-right: 10px;
}